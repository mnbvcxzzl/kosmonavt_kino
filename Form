		<div class="arrow arrow-left" onclick="prevSlide()"><img src="recources/left-arrow1.png" ></div>
        <div class="arrow arrow-right" onclick="nextSlide()"><img src="recources/right-arrow1.png" ></div>
    </div>

     <script>
        let currentIndex = 0;
        const carousel = document.querySelector('.carousel');
        const items = document.querySelectorAll('.carousel-item');
        const totalItems = items.length;
        const visibleItems = 3;

        function updateCarousel() {
            carousel.style.transform = `translateX(-${currentIndex * (100 / visibleItems)}%)`;
        }

        function nextSlide() {
            if (currentIndex < totalItems - visibleItems) {
                currentIndex++;
            } else {
                currentIndex = 0;
            }
            updateCarousel();
        }

        function prevSlide() {
            if (currentIndex > 0) {
                currentIndex--;
            } else {
                currentIndex = totalItems - visibleItems;
            }
            updateCarousel();
        }
    </script>
	</section>


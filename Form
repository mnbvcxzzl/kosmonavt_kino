<script>
  document.addEventListener("DOMContentLoaded", function () {
    changeDay(null, 'today'); // При загрузке показываем только фильмы с data-day="today"
    
    // Инициализируем поиск
    document.getElementById('searchFilm').addEventListener('input', function() {
      filterFilms();
    });
  });

  function changeDay(event, day) {
    // Меняем активную кнопку
    if (event) {
      document.querySelectorAll('.day-select button').forEach(button => {
        button.classList.remove('active');
      });
      event.target.classList.add('active');
    }
    
    // Сохраняем выбранный день в data-атрибут контейнера
    document.getElementById('moviesSchedule').setAttribute('data-current-day', day);
    
    // Фильтруем фильмы
    filterFilms();
  }

  function filterFilms() {
    const searchQuery = document.getElementById('searchFilm').value.toLowerCase();
    const currentDay = document.getElementById('moviesSchedule').getAttribute('data-current-day');
    
    document.querySelectorAll('.film-card').forEach(card => {
      const title = card.querySelector('.film-info h1').textContent.toLowerCase();
      const cardDay = card.getAttribute('data-day');
      
      // Показываем только если совпадает день и (есть поисковый запрос - то совпадает с ним)
      card.style.display = (cardDay === currentDay && 
                           (searchQuery === '' || title.includes(searchQuery))) ? 'flex' : 'none';
    });
  }
</script>
	

  .day-select button {
    padding: 10px 25px;
	 margin: 0px 5px;
    border-radius: 25px;
    border: 1px solid white;
    background: transparent;
    color: white;
    cursor: pointer;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
	font-family: "Montserrat", sans-serif;

      <h3 style="font-size: 32px; margin-bottom: 30px;">Ваши данные</h3>
      <form id="userForm" onsubmit="submitUserData(event)">
        <input type="text" placeholder="Имя" required class="form-input" id="name">
        <input type="tel" placeholder="Телефон" required class="form-input" id="phone">
        <input type="email" placeholder="E-mail" required class="form-input" id="email">
        <button type="submit" class="buy-btn" style="margin-top: 30px;">Подтвердить</button>
      </form>
